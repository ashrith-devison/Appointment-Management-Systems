{
  "name": "core",
  "version": "1.0.0",
  "description": "core service",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/auth/auth.unit.test.js",
    "test:integration": "jest tests/auth/auth.integration.test.js",
    "test:auth:stress": "jest tests/auth/stress/auth.stress.test.js --runInBand",
    "test:doctor:stress": "jest tests/doctor/onboarding/stress/onboard.stress.test.js --runInBand",
    "test:load": "artillery run tests/auth/stress/artillery-config.yml",
    "test:load:registration": "artillery run tests/auth/stress/artillery-registration-stress.yml",
    "test:load:login": "artillery run tests/auth/stress/artillery-login-stress.yml",
    "test:load:doctor": "artillery run tests/doctor/onboarding/stress/artillery-config.yml",
    "test:load:doctor:login": "artillery run tests/doctor/onboarding/stress/artillery-login-stress.yml",
    "start": "nodemon app.js"
  },
  "author": "Ashrith Sai",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "crypto": "^1.0.1",
    "dotenv": "^16.6.1",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.1",
    "nodemailer": "^7.0.11",
    "redis": "^5.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "artillery": "^2.0.27",
    "autocannon": "^8.0.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.4.1",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**",
      "!**/*.test.js",
      "!**/*.spec.js",
      "!**/jest.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
